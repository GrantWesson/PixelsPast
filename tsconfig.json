{
	// ğŸ“¦ Base compiler options
	"compilerOptions": {
		// ğŸ§  Target modern JS for compatibility and performance
		"target": "ES2020",

		// ğŸ“¦ Use ES modules for clean import/export
		"module": "ESNext",

		// ğŸ§© Enable module resolution for scalable architecture
		"moduleResolution": "Node",

		// ğŸ§¼ Remove unused code and enable tree-shaking
		"isolatedModules": true,

		// ğŸ§  Strict typing for semantic clarity and safety
		"strict": true,

		// ğŸ§ª Catch common bugs early
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		// ğŸ§± Support JSX if needed for future UI components
		"jsx": "react-jsx",

		// ğŸ“ Output compiled JS to /public/js
		"outDir": "./public/js",

		// ğŸ“ Source files live in /core and /public/ts
		"rootDir": "./src",

		// ğŸ§© Allow imports from theme and core folders
		"baseUrl": ".",
		"paths": {
			"@core/*": ["src/core/*"],
			"@ts/*": ["src/ts/*"],
			"@themes/*": ["public/themes/*"]
		},

		// ğŸ§¼ Enable source maps for debugging
		"sourceMap": true,

		// ğŸ§  Support decorators if needed for lore-driven UI logic
		"experimentalDecorators": true
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules", "public", "sql", "bin", "res"]
}
